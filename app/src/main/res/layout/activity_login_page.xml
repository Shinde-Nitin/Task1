<!--                            android:layout_marginBottom="14dp"-->
<!--                            android:textColorLink="@color/purple_dark"-->
<!--                            android:textSize="12sp"></TextView>-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnloginBtn"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:background="@drawable/btnshape"
        android:elevation="4000dp"
        android:fontFamily="@font/custome_font_bold"
        android:text="Log In"
        android:textColor="@color/white"

        android:textSize="20sp"></androidx.appcompat.widget.AppCompatButton>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvloginNewUser"
        android:text="New User? Sign Up"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/arya_bold"
    ></TextView>
</LinearLayout>
    </ScrollView>