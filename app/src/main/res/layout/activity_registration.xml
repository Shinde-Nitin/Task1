<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    tools:context=".Registration_Activity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:layout_marginBottom="-110dp"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="-125dp"
            android:layout_gravity="center"
            android:src="@drawable/loginbg">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arya_bold"
            android:gravity="center"
            android:text="SikhoHere"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:textSize="29dp"

            ></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arya_bold"
                    android:gravity="center"
                    android:text="CREATE NEW ACCOUNT"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRegisterName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/etshape"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/allerta"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="6dp"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etRegisterPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/etshape"
                    android:drawableLeft="@drawable/phone_number"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/allerta"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:paddingRight="6dp"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etRegisterUsername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/etshape"
                    android:drawableLeft="@drawable/register_username"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/allerta"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingRight="6dp"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etRegisterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/etshape"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/allerta"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:paddingRight="6dp"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etRegisterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/etshape"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawableEnd="@drawable/eye_off"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/allerta"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingRight="6dp"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegisterBtn"
                    android:layout_width="225dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btnshape"
                    android:elevation="4dp"
                    android:fontFamily="@font/custome_font_bold"
                    android:text="REgister now"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRegesterlogin"
                    android:text="Already have an account?"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/arya_bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
